@model ECommerceWebApp.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit Personal Data";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="EditUserData" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-dan"></div>

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" asp-action="EditUserData" class="btn btn-outline-success float-right">
                        <a class="btn btn-outline-danger" asp-controller="User" asp-action="DisplayPersonalData">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
