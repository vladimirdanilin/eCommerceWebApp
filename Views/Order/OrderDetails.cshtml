@model ECommerceWebApp.ViewModels.OrderListViewModel

@if (Model != null && User.Identity.IsAuthenticated)
{
    <h2>Order Details</h2>
    <h3>Order ID: @Model.OrderId</h3>
    <h3>Date: @Model.OrderDate</h3>
    <h3>Total: @Model.Total</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model.OrderProductViewModels)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}